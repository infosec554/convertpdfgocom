# ====== Postgres (RDS) ======
POSTGRES_HOST=<rds-endpoint>.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_USER=<prod_user>
POSTGRES_PASSWORD=<prod_password>
POSTGRES_DB=convertpdfgo

# ====== Redis (ElastiCache) ======
REDIS_HOST=<elasticache-primary-endpoint>
REDIS_PORT=6379
REDIS_PASSWORD=<if_enabled_or_empty>
REDIS_TTL=5m

# ====== Gotenberg (container ichida) ======
GOTENBERG_URL=http://gotenberg:3000

# ====== App ======
SERVICE_NAME=convertpdfgo
LOGGER_LEVEL=info
JWT_SECRET_KEY=<rotate_me_prod_jwt>

# ====== Email (SES tavsiya qilinadi) ======
SMTP_HOST=email-smtp.<region>.amazonaws.com
SMTP_PORT=587
SMTP_USER=<ses_smtp_username>
SMTP_PASS=<ses_smtp_password>
SMTP_SENDER_NAME=converpdfgo
# (Agar vaqtincha Gmail bo'lsa — baribir rotate qiling va prod’da SES’ga o’ting)

# ====== Telegram ======
BOT_TOKEN=<telegram_bot_token>
BOT_DEBUG=false

# ====== Google OAuth ======
GOOGLE_CLIENT_ID=<google_client_id>
GOOGLE_CLIENT_SECRET=<google_client_secret>
# Prod: ALB/Domain orqali public HTTPS url
GOOGLE_REDIRECT_URL=https://api.yourdomain.com/auth/google/callback
